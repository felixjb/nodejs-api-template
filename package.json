{
  "name": "nodejs-api-template",
  "version": "1.0.0",
  "description": "Node.js API template",
  "main": "index.ts",
  "engines": {
    "node": ">=12.18.3",
    "npm": ">=6.14.6"
  },
  "scripts": {
    "check-types": "tsc",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(ts|js|json)\"",
    "validate": "npm-run-all --parallel check-types lint format",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "start:dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felixjb/nodejs-api-template.git"
  },
  "keywords": [
    "back-end"
  ],
  "author": "felixjb",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/felixjb/nodejs-api-template/issues"
  },
  "homepage": "https://github.com/felixjb/nodejs-api-template#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "axios": "^0.20.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
